@using Sitecore.Data.Items
@using Sitecore.XA.Foundation.MarkupDecorator.Extensions
@using Sitecore.XA.Foundation.RenderingVariants.Extensions
@using Sitecore.XA.Foundation.RenderingVariants.Fields
@using Sitecore.XA.Foundation.SitecoreExtensions.Extensions
@using Sitecore.XA.Foundation.Variants.Abstractions.Fields
@model Sitecore.XA.Foundation.RenderingVariants.Models.VariantListsRenderingModel

<div @Html.Sxa().Component(Model.Rendering.RenderingCssClass ?? "page-list", Model.Attributes)>
    <div class="tb-multi-language-video-list-container">
        @if (Model.Items.Any() && Model.VariantFields != null)
        {
            <div class="items tb-multi-language-video-list-row">
                @foreach (Item item in Model.Items)
                {
                   
                        foreach (BaseVariantField variantField in Model.VariantFields)
                        {
                            @Html.RenderingVariants().RenderVariant(variantField, item, Model.RenderingWebEditingParams, Model)
                        }
                   
                }
            </div>
        }
        else
        {
            @Model.MessageIsEmpty
        }
    </div>
</div>